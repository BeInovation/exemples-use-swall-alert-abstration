interface FieldLabelProps {
  children: React.ReactNode;
  required?: boolean;
  optional?: boolean;
  optionalProps?: ChipProps; // permite customizar o chip completamente
}

const FieldLabel: React.FC<FieldLabelProps> = ({ 
  children, 
  required = false,
  optional = !required,
  optionalProps = { label: "Opcional", size: "small", color: "default" }
}) => {
  return (
    <Box sx={{ display: 'flex', alignItems: 'center', gap: 1 }}>
      {children}{required && '*'}
      {optional && !required && <Chip {...optionalProps} />}
    </Box>
  );
};
