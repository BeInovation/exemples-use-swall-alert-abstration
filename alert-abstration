label={
    props.required ? (
      props.label + '*'
    ) : (
      <Box sx={{ display: 'flex', alignItems: 'center', gap: 1 }}>
        {props.label}
        <Chip 
          label="Opcional" 
          size="small" 
          sx={{
            height: '18px',
            fontSize: '0.6rem',
            bgcolor: 'grey.100',
            color: 'grey.600',
            border: '1px solid',
            borderColor: 'grey.300',
          }}
        />
      </Box>
    )
  }
