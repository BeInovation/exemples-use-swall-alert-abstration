// Cole este código no seu arquivo:

const popoverConfigs = {
  canceled: {
    type: 'error' as const,
    title: 'OC Cancelada',
    text: 'TN incorreta'
  },
  
  pendingDocs: {
    type: 'warning' as const,
    title: 'OC com pendência de documentos',
    getDynamicText: (status: any) => status?.cancellation_reason || 'Motivo não informado'
  }
};

renderCell: ({ value: status }) => {
  const statusChip = <AppStatusChip label={status?.label} status={status?.value} />;
  
  let config = null;
  let popoverText = '';
  
  if (status === 'is_canceled') {
    config = popoverConfigs.canceled;
    popoverText = config.text;
  } else if (!status?.is_entry_documents_approved) {
    config = popoverConfigs.pendingDocs;
    popoverText = config.getDynamicText(status);
  }
  
  if (!config) return statusChip;
  
  return (
    <AppPopover
      type={config.type}
      placement="right"
      size="large"
      title={config.title}
      text={popoverText}
      disabled={false}
    >
      {statusChip}
    </AppPopover>
  );
}
