import withReactContent from 'sweetalert2-react-content';
import Swal from 'sweetalert2';
import { AppSwalAlerts } from './AppSwalAlerts';

const MySwal = withReactContent(Swal);

type SwallAlertType = 'success' | 'error' | 'warning' | 'info';

export const swallAlert = (
    type: SwallAlertType,
    title: string = '',
    message: string = ''
) => {
    return MySwal.fire({
        html: (
            <AppSwalAlerts
                swal={MySwal}
                type={type}
                title={title}
                text={message}
            />
        ),
        showCloseButton: false,
        showCancelButton: false,
        showConfirmButton: false,
        allowOutsideClick: false,
        allowEscapeKey: true,
    });
};

import { swallAlert } from './swallAlert';

export const alert = {
    success: (title: string, message?: string) =>
        swallAlert('success', title, message),
    error: (title: string, message?: string) =>
        swallAlert('error', title, message),
    warning: (title: string, message?: string) =>
        swallAlert('warning', title, message),
    info: (title: string, message?: string) =>
        swallAlert('info', title, message),
};
